@import 'nib'
global-reset()
reset-html5()
input[type="text"], input[type="email"], input[type="search"], input[type="password"] {
  -webkit-appearance: none;
  -moz-appearance: none; /* mobile firefox too! */
}





//http://www.fonts2u.com/iconicstroke.font
background = #34383d
color = #4f5561
inputbg = #1c1e21
body
  background: background
  overflow: hidden
form#login
  font-family: Arial, Helvetica, sans-serif;
  font-weight: bold;
  font-size: 13px
  width:300px
  background: transparent
  border-radius: 5px
  text-align:center
  position: absolute
  top:50%
  left:50%
  margin-top:-45px
  margin-left:-150px
  height:0
  border:none
  border-top:45px solid inputbg
  border-bottom:45px solid inputbg
  // box-sizing: border-box
  transition: all 2s 0s
  input
    border-radius:0
    box-shadow: none
    transition: all 2s 2s
    font: inherit
    background: transparent
    reset-box-model()
    position:absolute
    &:nth-child(1)
      top: -30px
      border-bottom: 1px solid background
    &:nth-child(2)
      border-top: 1px solid background
      bottom: -30px
    display: block
    width: 276px
    height: 30px
    box-sizing: border-box
    margin: 0 0 0 12px
    color: #a9a9a9
    border: none
    // text-align:center
    &::-webkit-input-placeholder
      // text-align:left
      color:color
    &:-moz-placeholder // Mozilla Firefox 4 to 18
      // text-align:left
      color:    color;
    &::-moz-placeholder // Mozilla Firefox 19+
      // text-align:left
      color:    color;
    &:-ms-input-placeholder // Internet Explorer 10+
      // text-align:left
      color:    color;
  a
    color #6f7787
  button
    position: absolute
    border-radius: 23px
    width: 46px
    height: 46px
    right:-23px
    top: -23px
    color: background
    background: inputbg
    box-sizing: border-box
    border:none
    border: 6px solid background
    transition: all 2s 2s
  &.accept
    margin-top:-45px
    top:0
    height:100%
    // opacity:0
    transition-delay: 2s
    button
      transition-delay: 0s
      transform: rotate(-90deg)
      // right:50%
      margin-right:50%
      // -webkit-backface-visibility:hidden
    input
      transition-delay: 0s
      width: 300px
      padding: 0 12px 0 12px
      margin-left:0
  p
    color:color
    padding-top:45px + 12px
    position: absolute
    width:100%
    top:100%

