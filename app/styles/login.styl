@import 'nib'
global-reset()
reset-html5()
input[type="text"], input[type="email"], input[type="search"], input[type="password"] {
  -webkit-appearance: none;
  -moz-appearance: none; /* mobile firefox too! */
}





//http://www.fonts2u.com/iconicstroke.font
// http://stackoverflow.com/questions/10578424/css3-transitions-on-pseudo-elements-after-before-not-working
background = #34383d
color = #4f5561
inputbg = #1c1e21
body
  background: background
  overflow: hidden
form#login
  font-family: Arial, Helvetica, sans-serif;
  font-weight: bold;
  font-size: 13px
  min-width: 300px //ugly FIX CSS3 transitions on pseudo-elements (:after, :before)
  width: 15px //ugly FIX CSS3 transitions on pseudo-elements (:after, :before)
  background: transparent
  border-radius: 5px
  text-align: center
  position: absolute
  top: 50%
  left: 50%
  margin-top:-45px
  margin-left:-150px
  height: 0
  min-height: 2px
  border:none
  border-top: 44px solid inputbg
  border-bottom: 44px solid inputbg
  transition:top 2s , margin 2s, height 2s, width 2s
  transition-delay: 0s, 0s, 0s, 2s;
  &:after
    content:""
    background: inputbg
    height:4px
    width: inherit
    position: absolute
    left:0
    top: -1px
  input
    border-radius:0
    box-shadow: none
    font: inherit
    background: transparent
    reset-box-model()
    position:absolute
    &:nth-child(1)
      top: -30px
    &:nth-child(2)
      bottom: -30px
    right: 0
    display: block
    width: 278px
    height: 30px
    box-sizing: border-box
    color: #a9a9a9
    border: none
    // text-align:center
    &::-webkit-input-placeholder
      // text-align:left
      color:color
    &:-moz-placeholder // Mozilla Firefox 4 to 18
      // text-align:left
      color:    color;
    &::-moz-placeholder // Mozilla Firefox 19+
      // text-align:left
      color:    color;
    &:-ms-input-placeholder // Internet Explorer 10+
      // text-align:left
      color:    color;
  a
    color #6f7787
  button
    $border = 6px
    $size = 40px;
    overflow:hidden
    position: absolute
    box-sizing: content-box
    border-radius: 26px
    padding: 0
    width: $size
    height: $size
    right: -23px //-(($border + $size) / 2)
    top: -25px//-(($border + $size) / 2)
    color: background
    background: inputbg
    border: solid background
    border-width: 6px
    transition: all 2s 2s
    background-clip: padding-box // FF/IE border radius "background bleed", or "leaking" fix
    buttonTopcenter = ($size / 2)
    &:after
      content:""
      display:block
      position: absolute
      margin:0
      left:16px
      height: 0
      width: 0
      border: 0 solid transparent
      border-left-width: 10px
      border-top-width: 8px
      border-bottom-width: 8px
      border-left-color: background
      top: (buttonTopcenter - ((@border-top-width + @border-bottom-width)/2))
  &.accept
    margin-top:-45px
    top:0
    height:100%
    // opacity:0
    width: 0 //ugly FIX CSS3 transitions on pseudo-elements (:after, :before)
    transition:top 2s , margin 2s, height 2s, width 2s
    transition-delay: 2s, 2s, 2s, 0s;
    button
      transition-delay: 0s
      transform: rotate(-90deg)
      margin-right:50%
  p
    right:0
    float:right
    width: 300px
    color:color
    padding-top:45px + 12px
    position: absolute
    top:100%

