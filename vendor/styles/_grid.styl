

$total_columns=   12;     //        //
$total_width=   100%;    // px|100%    // px = fixed, 100% = fluid
$gutter_width=    1%;     // px|%     // px = fixed, % = fluid

column(col, offset = 0, position = normal)
  if (position != normal && offset == 0)
    width (ceil(col * ($total_width / $total_columns)) - $gutter_width + ($gutter_width / 2))
  else
    width ceil(col * ($total_width / $total_columns))
  if position == last
    float right
  else
    float left
  if (position == first && offset != 0)
    margin-left (ceil(offset * ($total_width / $total_columns)) - $gutter_width + ($gutter_width / 2))
  else if (offset != 0)
    margin-left ceil(offset * ($total_width / $total_columns))
